<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_portfolio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.debojeet.myappportfolio.AppPortfolio"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
        android:text="@string/app_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/first_project"
        android:background="@color/projectButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/button"
        android:onClick="showToast"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="@dimen/main_activity_horizontal_margin"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

    <Button
        android:text="@string/second_project"
        android:background="@color/projectButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:onClick="showToast"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/button2"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

    <Button
        android:text="@string/third_project"
        android:background="@color/projectButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:onClick="showToast"
        android:layout_alignStart="@+id/button2"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

    <Button
        android:text="@string/fourth_project"
        android:background="@color/projectButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/button4"
        android:onClick="showToast"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

    <Button
        android:text="@string/fifth_project"
        android:background="@color/projectButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/button5"
        android:onClick="showToast"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

    <Button
        android:text="@string/capstone_project"
        android:background="@color/capstoneButtonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/button6"
        android:onClick="showToast"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginRight="@dimen/main_activity_horizontal_margin" />

</RelativeLayout>
